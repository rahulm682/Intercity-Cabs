{
  "compilerOptions": {
    /* Base Options */
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "NodeNext",           // Best for modern Node + "type": "module"
    "moduleResolution": "NodeNext", // Enforces correct extensions

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Remove these unless you are doing SSR with React */
    // "jsx": "react-jsx", 
  }
}